{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./working",
    "rootDir": "./",

    /* Strict Type-Checking Options */
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    /* Additional Checks */
    "esModuleInterop": true
  },
  "include": [ "src/**/*.ts", "test/**/*.ts" ]
}
